<Page x:Class="PatientJournal.Patients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PatientJournal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Patients">

    <Grid>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="195*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="HomeButton" Content="Home" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="44"/>
        <Button x:Name="PatientsButton" Content="Patients" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="44" Margin="200,0,0,0"/>
        <Button x:Name="DepartmentButton" Content="Department" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="44" Margin="400,0,0,0"/>
        <Button x:Name="StaffButton" Content="Staff" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="44" Margin="600,0,0,0"/>
    </Grid>
    <Frame NavigationUIVisibility="Hidden" x:Name="Patient_Frame" Grid.Row="1"></Frame>
    </Grid>
</Page>
